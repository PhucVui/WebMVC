<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap-v4/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-v4/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <link href="~/css/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-info navbar-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"> 
                <img src="~/images/anhxinchao.jpg" alt="Logo" class="rounded-circle" style="width : 40px ; height: 40px">
            </a>

            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#mainMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainMenu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" style="color:white">List Employee</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Create" style="color:white">Create Employee</a>
                    </li>                  
                </ul>
            </div>
        </nav>

        <div>
            @RenderBody()
        </div>
        <footer class="boder-top card-footer bg-primary text-center ">        
            <span style="color:white"> Coppyright &copy; 2020  </span>   
        </footer>       
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
