@model HomeDetailsViewModel
@{
    ViewBag.Title = "Details Employee";

}

<div class="row justify-content-center text-center">
    <div class="col-sm-6">
        <div class="card my-2">
            <div class="card-header">
                <h3>Name: @Model.Employee.FullName</h3>
            </div>
            <div class="card-body text-center">
                <img src="@Url.Content("~/" + Model.Employee.AvatarPath)" class="card-img-top" />
                <h3>ID: @Model.Employee.Id</h3>
                <h3>Email: @Model.Employee.Email</h3>
                <h3>Department: @Model.Employee.Department</h3>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Back</a>
                <a asp-action="Edit" asp-controller="Home"  asp-route-id="@Model.Employee.Id"class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Employee.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>